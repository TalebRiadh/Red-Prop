
                        {% extends 'base.html.twig' %}
{% block title 'Gestion des Commandes' %} 
{% block stylesheets %} 
{% endblock %} 
{% block body %}


        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

<div class="container-fluid">
    <div class="py-5 text-center" style="margin:-20px;">
        <img class="d-block mx-auto mb-4" src="{{asset('images/logos/logo1.png')}}" alt="" width="300" height="100">
        <hr>
        <h2>Gestion des Commandes</h2>
    <p class="lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent ac massa eget velit sagittis sodales. Curabitur varius facilisis interdum. Nunc velit arcu, auctor hendrerit orci et, vulputate lacinia leo. Aenean non posuere libero. </p>
    </div>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success" id="successMessage">
        {{ message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}
    <div id="users">

        <div class="table-responsive">
            <div class="col-sm-12">
                <h5 class="card-title"><i class="fa fa-fw fa-search"></i> Cherche une Commande:</h5>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label><br></label>
                            <input class="search form-control" placeholder="Recherche" />
                        </div>
                    </div>

                </div>
                <table class="table   table-hover shadow p-3 mb-5 bg-white rounded">
                    <thead>
                        <tr>
                            <th style="text-align: center; vertical-align: middle;" scope="col">
                                <i class="sort fas fa-sort-numeric-down" data-sort="date"></i> Date D'ajout
                            </th>
                            <th style="text-align: center; vertical-align: middle;" scope="col">
                                <i class="sort fas fa-sort-numeric-down" data-sort="code" id="code"></i> Référence
                            </th>
                            <th style="text-align: center; vertical-align: middle;" scope="col">
                                <i class="sort fas fa-sort-alpha-down" data-sort="name"></i> Client
                            </th>
                            <th style="text-align: center; vertical-align: middle;" scope="col">
                                Produits
                            </th>
                            
                            <th style="text-align: center; vertical-align: middle;" scope="col">
                                <i class="sort fas fa-sort-numeric-down" data-sort="price"></i> Prix Total
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody class="list">
                        {% for order in orders %}
                        <tr>
                            <td class="date" style="text-align: center; vertical-align: middle;">{{ order.created|date('Y-m-d H:i') }}</td>
                            <th class="code" style="text-align: center; vertical-align: middle;" scope="row">{{order.reference}}</th>
                            <td  class="name" style="text-align: center; vertical-align: middle;">{{order.client}}</td>
                            <td  style="text-align: center; vertical-align: middle;">
                            {% for list in order.list %}
                             <figure class="media">
                                        <figcaption class="media-body">
                                            <dl style="text-align: center; vertical-align: middle;" class="param param-inline small">
                                                <dt><strong>Product: </strong></dt>
                                                <dd>{{list.product}}</dd>
                                            </dl>
                                            <dl  class="param param-inline small">
                                                <dt><strong>quantity: </strong></dt>
                                                <dd>{{list.quantity}}</dd>
                                            </dl>

                                        </figcaption>
                                    </figure>
                            {% endfor %}
                            </td>
                            <td class="price" style="text-align: center; vertical-align: middle;">{{order.totalprice}} Da</td>
                            
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
                    </div>
            </div>
        </main>

    {% endblock %} {% block javascripts %} {% endblock %}
